<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FrmTruyen">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:paddingLeft="15dp"
                android:textColor="@color/RedColor"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="Truyện tổng hợp (20)"
                android:layout_marginVertical="16dp"
                android:id="@+id/tvTruyenTH"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/WhiteColor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:orientation="horizontal"
                android:id="@+id/ryTruyen"
                app:layout_constraintTop_toBottomOf="@+id/tvTruyenTH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:paddingLeft="15dp"
                android:textColor="@color/RedColor"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="Truyện cười (7)"
                android:layout_marginVertical="16dp"
                android:id="@+id/tvTruyenCuoi"
                app:layout_constraintTop_toBottomOf="@+id/ryTruyen"
                android:background="@color/WhiteColor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:orientation="horizontal"
                android:id="@+id/ryTruyenCuoi"
                app:layout_constraintTop_toBottomOf="@+id/tvTruyenCuoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingLeft="15dp"
                android:textColor="@color/RedColor"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="Truyện kiếm hiệp (4)"
                android:layout_marginVertical="16dp"
                android:id="@+id/tvTruyenKiemHiep"
                app:layout_constraintTop_toBottomOf="@+id/ryTruyenCuoi"
                android:background="@color/WhiteColor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:orientation="horizontal"
                android:id="@+id/ryTruyenKiemHiep"
                app:layout_constraintTop_toBottomOf="@+id/tvTruyenKiemHiep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:paddingLeft="15dp"
                android:textColor="@color/RedColor"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="Truyện Việt Nam (6)"
                android:layout_marginVertical="16dp"
                android:id="@+id/tvTruyenVietNam"
                app:layout_constraintTop_toBottomOf="@+id/ryTruyenKiemHiep"
                android:background="@color/WhiteColor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:orientation="horizontal"
                android:id="@+id/ryTruyenVietNam"
                app:layout_constraintTop_toBottomOf="@+id/tvTruyenVietNam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>